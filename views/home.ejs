<%- include("partials/header") -%>

   <div class='container home-title'>
      <h1>Hello and Welcome!</h1>
      <p>
         <%= startingContent %>
      </p>
   </div>


   <div class='container-fluid home-post-outer'>
      <% posts.forEach(function(post){ %>
         <div class='container-fluid home-post'>
            <h2>
               <a href='/posts/<%=post.title %>'>
                  <%= post.title %>
               </a>
            </h2>
            <p>
               <%= post.content.substring(0,300) + "..." ; %>
                  <a href='/posts/<%=post.title %>'>Read More</a>
            </p>
         </div>
         <% }); %>
   </div>



   <%- include("partials/footer") -%>